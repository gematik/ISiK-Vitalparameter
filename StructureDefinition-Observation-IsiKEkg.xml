<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <url value="https://gematik.de/fhir/IsiK/StructureDefinition/IsiKEkg" />
  <name value="IsiKEkg" />
  <status value="draft" />
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="true" />
  <type value="Observation" />
  <baseDefinition value="http://fhir.de/StructureDefinition/observation-de-vitalsign" />
  <derivation value="constraint" />
  <differential>
    <element id="Observation.status">
      <path value="Observation.status" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.category">
      <path value="Observation.category" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.category:vs-cat">
      <path value="Observation.category" />
      <sliceName value="vs-cat" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.code">
      <path value="Observation.code" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.code.coding">
      <path value="Observation.code.coding" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.subject">
      <path value="Observation.subject" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.encounter">
      <path value="Observation.encounter" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.effective[x]">
      <path value="Observation.effective[x]" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.value[x]">
      <path value="Observation.value[x]" />
      <max value="0" />
    </element>
    <element id="Observation.device">
      <path value="Observation.device" />
      <min value="1" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.component:Lead">
      <path value="Observation.component" />
      <sliceName value="Lead" />
      <min value="1" />
      <mustSupport value="true" />
    </element>
    <element id="Observation.component:Lead.code">
      <path value="Observation.component.code" />
      <mustSupport value="true" />
      <binding>
        <strength value="extensible" />
        <description value="Codes identifying the EKG lead" />
        <valueSet value="https://gematik.de/fhir/ISiK/ValueSet/ekg-leads" />
      </binding>
    </element>
    <element id="Observation.component:Lead.code.coding:loinc">
      <path value="Observation.component.code.coding" />
      <sliceName value="loinc" />
      <patternCoding>
        <system value="http://loinc.org" />
        <code value="44967-8" />
      </patternCoding>
      <mustSupport value="true" />
    </element>
    <element id="Observation.component:Lead.value[x]">
      <path value="Observation.component.value[x]" />
      <type>
        <code value="SampledData" />
      </type>
      <mustSupport value="true" />
    </element>
    <element id="Observation.component:Lead.value[x]:valueQuantity">
      <path value="Observation.component.value[x]" />
      <sliceName value="valueQuantity" />
      <max value="0" />
    </element>
  </differential>
